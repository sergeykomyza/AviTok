<!DOCTYPE html>
html(lang="ru")
	head
		include ./../sections/_head.pug
		title Avi-tok | Table settings 
	body

		include ./../sections/_header.pug

		main.main

			.container

				.table-action
					.table-action__box
						include ./../layouts/_tableSearch.pug
						+tableFilterBtn('default', 'Фильтр поиска')
					.table-action__box
						include ./../layouts/_saveTableBtn.pug
						+addTable('Создать таблицу')

				.table-wrap 

					.table-visible
						.mobile
							.table-visible__box 
								span.table-visible__text Выводить по
								.table-visible__area 
									output.table-visible__num 10

					.table
							
						button.table-up.js-topToTableHead
							svg(width='14' height='9' viewbox='0 0 14 9' fill='none' xmlns='http://www.w3.org/2000/svg')
								path(d='M1.645 0L7 5.56275L12.355 0L14 1.71255L7 9L0 1.71255L1.645 0Z' fill='white')

						-
							const tableHead = [
								{mod: 'name',     name: 'таблица'},
								{mod: 'pay',      name: 'дата оплаты'},
								{mod: 'comment',  name: 'примечание'},
								{mod: 'quantity', name: 'кол-во объявлений'}
							]

						.table-head 
							.table-head__col.table--num
								.search-number
									span.search-number__grid # 
									output.search-number__item 36
								svg.table-head__icon(width='16' height='10' viewBox='0 0 16 10' fill='none')
									path(d='M2.82843 0C1.04662 0 0.154284 2.15428 1.41421 3.41421L6.58579 8.58579C7.36684 9.36684 8.63317 9.36683 9.41421 8.58579L14.5858 3.41421C15.8457 2.15428 14.9534 0 13.1716 0H2.82843Z' fill='white')
							each item in tableHead
								div(class=`table-head__col table--${item.mod}`)
									span.table-head__name= item.name
									svg.table-head__icon(width='16' height='10' viewBox='0 0 16 10' fill='none')
										path(d='M2.82843 0C1.04662 0 0.154284 2.15428 1.41421 3.41421L6.58579 8.58579C7.36684 9.36684 8.63317 9.36683 9.41421 8.58579L14.5858 3.41421C15.8457 2.15428 14.9534 0 13.1716 0H2.82843Z' fill='white')

						.table__scroll
							
							.table-body.table-settings
								
								each item, i in [{status: 'red', name: 'Авто запчасти Авт', date: '01 Мая 2023 г', comment: 'Не оплатили', num: '100'}, {status: 'green', name: 'Авто прицепы', date: '02 Июня 2023 г', comment: 'Обновить цены', num: '250'}]

									.position

										.desktop
											.position__num.table--num= `${i+1}`

										.position-data.table--name
											.edit-field
												.edit-field__pos
													.mobile
														.position__num= `${i+1}`
													.edit-field__box
														input.edit-field__input(type="text" value=`${item.name}`) 
													.desktop
														if(i == 0)
															button.edit-btn.edit-btn--complete
																svg(width='20' height='15' viewBox='0 0 20 15' fill='none' xmlns='http://www.w3.org/2000/svg')
																	path(d='M0 8L2 6L7 11L18 0L20 2L7 15L0 8Z' fill='white')
														if(i == 1)
															button.edit-btn.edit-btn--record 
																svg(xmlns='http://www.w3.org/2000/svg' width='20' height='20' viewBox='0 0 20 20' fill='none')
																	path(d='M0 15.8339V20H4.16609L16.4533 7.71282L12.2872 3.54673L0 15.8339ZM19.675 4.49104C20.1083 4.05777 20.1083 3.35787 19.675 2.92459L17.0754 0.324955C16.6421 -0.108318 15.9422 -0.108318 15.509 0.324955L13.4759 2.35801L17.642 6.52409L19.675 4.49104Z' fill='#FFF')

											table.position-data__table
												tr.position-data__item 
													td.position-data__col
														b.position-data__name Таблица: 
													td.position-data__col.position-data__col--flex
														a.position-data__val(href="#") 1UwxHa0PZnO4t0GcGAWxadsOlkFRzP0XUPYN7EWhZDnM 
														include ./../layouts/_copyBtn.pug
												tr.position-data__item 
													td.position-data__col
														b.position-data__name XML Avito:
													td.position-data__col.position-data__col--flex
														a.position-data__val(href="#") 5042fade-b616-45c9-8221-8323cc2e11ee  
														include ./../layouts/_copyBtn.pug
											
											.table-settings__box
												
												.desktop

													button.table-settings__toggle 
														svg(width='14' height='9' viewBox='0 0 14 9' fill='none' xmlns='http://www.w3.org/2000/svg')
															path(d='M1.645 0L7 5.56275L12.355 0L14 1.71255L7 9L0 1.71255L1.645 0Z' fill='white')
														span Настройки таблицы

												.position-data__fields 
													-
														const fields = [{name: 'Яндекс токен', value: '5042fadeb616-45c9-8221-8323cc2e11eeasdghsdfgsadgadg', classBtn: 'record'}, {name: 'Avito client_id', value: '', classBtn: 'add'}, {name: 'Avito client_secret', value: '', classBtn: 'add'}, {name: 'Avito user_id', value: '', classBtn: 'add'}, {name: 'Таблица Google', value: '1UwxHa0PZnO4t0GcGAWxadsOlkFRzP0XUPYN7EWhZDnMasdfasdfasdfasdfasdfasdf', classBtn: 'record'}]
													each elem in fields 
														.edit-field
															.mobile 
																span.edit-field__name= elem.name
															.edit-field__box
																.desktop
																	span.edit-field__name= elem.name
																input(class=`${item.classBtn === 'record' ? 'edit-field__input edit-field__input--underline' : 'edit-field__input'}` type="text" value= elem.value)
															.desktop
																button(class=`edit-btn edit-btn--${elem.classBtn}`)
																	if(elem.classBtn == 'record')
																		svg(xmlns='http://www.w3.org/2000/svg' width='20' height='20' viewBox='0 0 20 20' fill='none')
																			path(d='M0 15.8339V20H4.16609L16.4533 7.71282L12.2872 3.54673L0 15.8339ZM19.675 4.49104C20.1083 4.05777 20.1083 3.35787 19.675 2.92459L17.0754 0.324955C16.6421 -0.108318 15.9422 -0.108318 15.509 0.324955L13.4759 2.35801L17.642 6.52409L19.675 4.49104Z' fill='#FFF')
																	else 
																		svg(width='20' height='20' viewBox='0 0 20 20' fill='none' xmlns='http://www.w3.org/2000/svg')
																			path(d='M20 11.4286H11.4286V20H8.57143V11.4286H0V8.57143H8.57143V0H11.4286V8.57143H20V11.4286Z' fill='white')

										.position-pay.table--pay  
											.mobile 
												.position__mobiletitle Дата оплаты
											.position-pay__date
												div(class=`position-pay__status position-pay__status--${item.status}`)
												span= item.date
											button.position-pay__btn Продлить

										.position-comment.table--comment
											.mobile 
												.position__mobiletitle Примечание
											textarea.position-comment__textarea= item.comment

										.position-quantity.table--quantity
											.mobile 
												.position__mobiletitle Кол-во объявлений:
											.position-quantity__box
												output.position-quantity__val= item.num
												button.position__del
													svg(height='1em' viewBox='0 0 448 512')
														path(d='M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z' fill="#FFF")
													.mobile 
														span Удалить таблицу

				+tableNav('', '1', '10')

		include ./../sections/_footer.pug

		include ./../sections/_scripts.pug